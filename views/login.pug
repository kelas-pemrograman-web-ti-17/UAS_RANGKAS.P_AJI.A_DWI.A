.limiter
    .container-login100
        .wrap-login100
            form.login100-form.validate-form(action='/login/', method='POST', role='form')
                span.login100-form-title.p-b-43
                    | Login to continue
                .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
                    input.input100(type='text' name='username')
                    span.focus-input100
                    span.label-input100 Username
                .wrap-input100.validate-input(data-validate='Password is required')
                    input.input100(type='password' name='password')
                    span.focus-input100
                    span.label-input100 Password
                .flex-sb-m.w-full.p-t-3.p-b-32
                    .contact100-form-checkbox
                        input#ckb1.input-checkbox100(type='checkbox' name='remember-me')
                        label.label-checkbox100(for='ckb1')
                            | Remember me
                    div
                        a.txt1(href='/regis')
                            | I don't have an account
                .container-login100-form-btn
                    button.login100-form-btn
                        | Login

            .login100-more(style="background-image: url('/login/images/signup-image.jpg');")
