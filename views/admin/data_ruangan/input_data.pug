include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Ruangan RS ADE
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Ruangan
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputdata_ruangan", role='form')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='koderuangan') Kode Ruangan
                                        .col-sm-10
                                            input#koderuangan.form-control(type='text' name="koderuangan" placeholder='Kode Ruangan')
                                    .form-group
                                        label.col-sm-2.control-label(for='namaruangan') Nama Ruangan
                                        .col-sm-10
                                            input#namaruangan.form-control(type='text' name="namaruangan" placeholder='Nama Ruangan')
                                    .form-group
                                        label.col-sm-2.control-label(for='status') Status Ruangan
                                        .col-sm-10
                                            input#status.form-control(type='text' name="status" placeholder='Status Ruangan')


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer