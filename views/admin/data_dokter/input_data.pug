include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Dokter RS ADE
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Dokter
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputdata_dokter", role='form')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kodedokter') Kode Dokter
                                        .col-sm-10
                                            input#kodedokter.form-control(type='text' name="kodedokter" placeholder='Kode Dokter')
                                    .form-group
                                        label.col-sm-2.control-label(for='namadokter') Nama Dokter
                                        .col-sm-10
                                            input#namadokter.form-control(type='text' name="namadokter" placeholder='Nama Dokter')
                                    .form-group
                                        label.col-sm-2.control-label(for='spesialis') Spesialis Dokter
                                        .col-sm-10
                                            input#spesialis.form-control(type='text' name="spesialis" placeholder='Spesialis Dokter')
                                    .form-group
                                        label.col-sm-2.control-label(for='jamkerja') Jam Kerja Dokter
                                        .col-sm-10
                                            input#jamkerja.form-control(type='text' name="jamkerja" placeholder='Jam Kerja Dokter')
                                    .form-group
                                        label.col-sm-2.control-label(for='hp') No Hp
                                        .col-sm-10
                                            input#hp.form-control(type='text' name="hp" placeholder='No Hp')


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer