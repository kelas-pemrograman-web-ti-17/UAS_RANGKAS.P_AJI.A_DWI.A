include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Pasien RS_ADE
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input data pasien
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+rumah_sakits._id + '/editrumah_sakit')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kodepasien') Kode Pasien
                                        .col-sm-10
                                            input#kodepasien.form-control(type='text' name="kodepasien" placeholder='Kode Pasien' value= (kodepasien == undefined) ? rumah_sakits.kodepasien: kodepasien)
                                    .form-group
                                        label.col-sm-2.control-label(for='namapasien') Nama Pasien
                                        .col-sm-10
                                            input#namapasien.form-control(type='text' name="namapasien" placeholder='Nama Pasien' value= (namapasien == undefined) ? rumah_sakits.namapasien: namapasien)
                                    .form-group
                                        label.col-sm-2.control-label(for='alamat') Alamat Pasien
                                        .col-sm-10
                                            input#alamat.form-control(type='text' name="alamat" placeholder='Alamat Pasien' value= (alamat == undefined) ? rumah_sakits.alamat: alamat)
                                    .form-group
                                        label.col-sm-2.control-label(for='keluhan') Keluhan
                                        .col-sm-10
                                            input#keluhan.form-control(type='text' name="keluhan" placeholder='Keluhan' value= (keluhan == undefined) ? rumah_sakits.keluhan: keluhan)
                                    .form-group
                                        label.col-sm-2.control-label(for='hp') No Hp
                                        .col-sm-10
                                            input#hp.form-control(type='text' name="hp" placeholder='No Hp' value= (hp == undefined) ? rumah_sakits.hp: hp)


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer